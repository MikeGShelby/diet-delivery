<section class="hero">
  <div class="cta">
    <h2>Meal delivery for chronic health conditions</h2>
      <form class="buttons">
            <h3>Select Your Diets</h3>
            <button type="button" class="filter-button">Renal</button>
            <button type="button" class="filter-button">Diabetic</button>
            <button type="button" class="filter-button">Low FODMAP</button>
      </form>
  </div>
</section>

<ul class="meal-list">
  {{#each meals as |meal|}}
    <li>
      {{> meal-info meal }}
    </li>
  {{/each}}
</ul>

<script src="/javascript/filter-meals.js"></script>